<?xml version="1.0"?>

<launch>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" default="$(find lab6)/worlds/entorno.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>
  
  <param name="robot_description" command="$(find xacro)/xacro --inorder $(find proyecto)/urdf/lidar_sensor.urdf" />
  
  <node name="spawn_gazebo_model" pkg="gazebo_ros" type="spawn_model" args="-x 0.0 -y -0.5 -z 0.1 -urdf -param robot_description -model robot" respawn="false" output="screen" />

</launch>
