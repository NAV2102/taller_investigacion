<?xml version="1.0"?>

<launch>

  <arg name="limited" default="false"  doc="If true, limits joint range [-PI, PI] on all joints." />
  <arg name="transmission_hw_interface" default="hardware_interface/PositionJointInterface" />

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" default="$(find proyecto)/worlds/entorno.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>
  
  <node name="person_config_node" pkg="proyecto" type="person_configuration" args="" output="screen"/>
  <node name="min_dist_node" pkg="proyecto" type="min_dist" args="" output="screen"/>
  
  <group ns="first_robot">
    
    <!--<param name="robot_description" command="$(find xacro)/xacro -
    -inorder '$(find ur_description)/urdf/ur5_joint_limited_robot.urdf.xacro' transmission_hw_interface:=$(arg transmission_hw_interface)" />-->
    <include file="$(find ur_description)/launch/ur5_upload.launch">
      <arg name="limited" value="$(arg limited)"/>
    </include>
    
    <param name="tf_prefix" value="ns0"></param>
    <node name="static_transform_publisher" pkg="tf" type="static_transform_publisher" args="0 0 0 3.1416 0 0 world ns0/world 100"/>
    
    <!-- push robot_description to factory and spawn robot in gazebo -->
    <node name="spawn_gazebo_model" pkg="gazebo_ros" type="spawn_model" args="-urdf -param robot_description -model robot -z 0.0" respawn="false" output="screen" />

    <include file="$(find ur_gazebo)/launch/controller_utils.launch"/>

    <!-- start this controller -->
    <rosparam file="$(find ur_gazebo)/controller/arm_controller_ur5.yaml" command="load"/>
    <node name="arm_controller_spawner" pkg="controller_manager" type="controller_manager" args="spawn arm_controller" respawn="false" output="screen"/>

    <!-- load other controllers -->
    <node name="ros_control_controller_manager" pkg="controller_manager" type="controller_manager" respawn="false" output="screen" args="load joint_group_position_controller" />
  
  </group>
  
  <group ns="second_robot">
    <param name="robot_description" command="$(find xacro)/xacro --inorder $(find proyecto)/urdf/lidar_sensor.urdf" />
  
    <node name="spawn_gazebo_model" pkg="gazebo_ros" type="spawn_model" args="-x 0.0 -y 0.0 -z 0.0 -urdf -param robot_description -model robot" respawn="false" output="screen" />
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
  </group>
  
</launch>
